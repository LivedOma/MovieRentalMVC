@model List<MovieRental.ViewModels.Movies.MovieIndexViewModel>

@{
    ViewData["Title"] = "Movies";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Movies</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add New Movie
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No movies found. <a asp-action="Create">Add your first movie!</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Year</th>
                    <th>Duration</th>
                    <th>Genres</th>
                    <th>Price</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th style="width: 200px;">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@movie.MovieId" class="text-decoration-none fw-bold">
                                @movie.Title
                            </a>
                        </td>
                        <td>@movie.ReleaseYear</td>
                        <td>@movie.DurationMinutes min</td>
                        <td>
                            @foreach (var genre in movie.Genres)
                            {
                                <span class="badge bg-secondary me-1">@genre</span>
                            }
                        </td>
                        <td>@movie.RentalPrice.ToString("C")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@movie.MovieId" 
                                class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@movie.MovieId" 
                                    class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@movie.MovieId" 
                                    class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>                        

                    </tr>
                }
            </tbody>
        </table>
    </div>
}