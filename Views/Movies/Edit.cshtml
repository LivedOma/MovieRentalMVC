@model MovieRental.ViewModels.Movies.MovieFormViewModel

@{
    ViewData["Title"] = $"Edit: {Model.Title}";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.MovieId">@Model.Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1>Edit Movie</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="MovieId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @* Title *@
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    @* Original Title *@
                    <div class="mb-3">
                        <label asp-for="OriginalTitle" class="form-label"></label>
                        <input asp-for="OriginalTitle" class="form-control" />
                        <span asp-validation-for="OriginalTitle" class="text-danger"></span>
                    </div>

                    @* Synopsis *@
                    <div class="mb-3">
                        <label asp-for="Synopsis" class="form-label"></label>
                        <textarea asp-for="Synopsis" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Synopsis" class="text-danger"></span>
                    </div>

                    <div class="row">
                        @* Release Year *@
                        <div class="col-md-4 mb-3">
                            <label asp-for="ReleaseYear" class="form-label"></label>
                            <input asp-for="ReleaseYear" class="form-control" type="number" min="1888" max="2100" />
                            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                        </div>

                        @* Duration *@
                        <div class="col-md-4 mb-3">
                            <label asp-for="DurationMinutes" class="form-label"></label>
                            <input asp-for="DurationMinutes" class="form-control" type="number" min="1" max="1000" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>

                        @* Language *@
                        <div class="col-md-4 mb-3">
                            <label asp-for="Language" class="form-label"></label>
                            <input asp-for="Language" class="form-control" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                    </div>

                    @* Rental Price *@
                    <div class="mb-3">
                        <label asp-for="RentalPrice" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="RentalPrice" class="form-control" type="number" step="0.01" min="0.01" max="9999.99" />
                        </div>
                        <span asp-validation-for="RentalPrice" class="text-danger"></span>
                    </div>

                    @* Genres *@
                    <div class="mb-4">
                        <label asp-for="SelectedGenreIds" class="form-label">Genres</label>
                        <div class="row">
                            @foreach (var genre in Model.AvailableGenres)
                            {
                                <div class="col-md-4 col-6">
                                    <div class="form-check">
                                        <input type="checkbox" 
                                               name="SelectedGenreIds" 
                                               value="@genre.GenreId" 
                                               class="form-check-input"
                                               id="genre_@genre.GenreId"
                                               @(genre.IsSelected ? "checked" : "") />
                                        <label class="form-check-label" for="genre_@genre.GenreId">
                                            @genre.Name
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}