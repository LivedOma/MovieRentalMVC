@model MovieRental.ViewModels.Cart.CartViewModel

@{
    ViewData["Title"] = "Checkout";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">My Cart</a></li>
        <li class="breadcrumb-item active" aria-current="page">Checkout</li>
    </ol>
</nav>

<h1><i class="bi bi-credit-card"></i> Checkout</h1>

<div class="row mt-4">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header">
                <strong><i class="bi bi-film"></i> Movies to Rent</strong>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@item.MovieTitle</strong>
                            <small class="text-muted">(@item.ReleaseYear)</small>
                        </div>
                        <span class="badge bg-success fs-6">@item.Price.ToString("C")</span>
                    </li>
                }
            </ul>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <strong><i class="bi bi-info-circle"></i> Rental Information</strong>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <i class="bi bi-clock"></i> <strong>Rental Period:</strong> 48 hours from checkout
                </p>
                <p class="mb-2">
                    <i class="bi bi-tv"></i> <strong>Streaming:</strong> Available immediately after payment
                </p>
                <p class="mb-0">
                    <i class="bi bi-arrow-repeat"></i> <strong>Re-watch:</strong> Unlimited during rental period
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <strong><i class="bi bi-receipt"></i> Payment Summary</strong>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal (@Model.TotalItems items):</span>
                    <span>@Model.TotalPrice.ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Tax:</span>
                    <span>$0.00</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between mb-4">
                    <strong class="h4">Total:</strong>
                    <strong class="h4 text-success">@Model.TotalPrice.ToString("C")</strong>
                </div>

                <form asp-action="ProcessCheckout" method="post">
                    <div class="mb-3">
                        <label class="form-label">Card Number (Demo)</label>
                        <input type="text" class="form-control" value="4242 4242 4242 4242" disabled />
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="form-label">Expiry</label>
                            <input type="text" class="form-control" value="12/28" disabled />
                        </div>
                        <div class="col-6">
                            <label class="form-label">CVC</label>
                            <input type="text" class="form-control" value="123" disabled />
                        </div>
                    </div>

                    <div class="alert alert-info small mb-3">
                        <i class="bi bi-info-circle"></i>
                        This is a demo checkout. No actual payment will be processed.
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-lock"></i> Pay @Model.TotalPrice.ToString("C")
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Cart
            </a>
        </div>
    </div>
</div>