@model MovieRental.ViewModels.People.PersonDetailsViewModel

@{
    ViewData["Title"] = Model.FullName;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">People</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.FullName</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h1 class="card-title h3 mb-0">@Model.FullName</h1>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>Birth Date:</strong>
                        <p>
                            @if (Model.BirthDate.HasValue)
                            {
                                @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                                @if (Model.Age.HasValue)
                                {
                                    <span class="text-muted">(@Model.Age years old)</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Unknown</span>
                            }
                        </p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Career:</strong>
                        <p>
                            @if (Model.MoviesAsActor.Any())
                            {
                                <span class="badge bg-info">Actor</span>
                            }
                            @if (Model.MoviesAsCrew.Any())
                            {
                                foreach (var role in Model.MoviesAsCrew.Select(m => m.Role).Distinct())
                                {
                                    <span class="badge bg-secondary">@role</span>
                                }
                            }
                            @if (!Model.MoviesAsActor.Any() && !Model.MoviesAsCrew.Any())
                            {
                                <span class="text-muted">No roles yet</span>
                            }
                        </p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Bio))
                {
                    <div class="mb-3">
                        <strong>Biography:</strong>
                        <p class="mt-2">@Model.Bio</p>
                    </div>
                }
            </div>
        </div>

        @* Filmografía como Actor *@
        @if (Model.MoviesAsActor.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-camera-reels"></i> Filmography (Actor)
                        <span class="badge bg-info">@Model.MoviesAsActor.Count</span>
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Movie</th>
                                <th>Year</th>
                                <th>Character</th>
                                <th>Billing</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.MoviesAsActor)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Movies" asp-action="Details" 
                                           asp-route-id="@role.MovieId" class="text-decoration-none">
                                            @role.MovieTitle
                                        </a>
                                    </td>
                                    <td>@role.ReleaseYear</td>
                                    <td>@role.CharacterName</td>
                                    <td>
                                        @if (role.CastOrder == 1)
                                        {
                                            <span class="badge bg-warning text-dark">Lead</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">#@role.CastOrder</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @* Filmografía como Crew *@
        @if (Model.MoviesAsCrew.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-film"></i> Filmography (Crew)
                        <span class="badge bg-secondary">@Model.MoviesAsCrew.Count</span>
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Movie</th>
                                <th>Year</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.MoviesAsCrew)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Movies" asp-action="Details" 
                                           asp-route-id="@role.MovieId" class="text-decoration-none">
                                            @role.MovieTitle
                                        </a>
                                    </td>
                                    <td>@role.ReleaseYear</td>
                                    <td><span class="badge bg-secondary">@role.Role</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body d-grid gap-2">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.PersonId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Person
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.PersonId" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Person
                    </a>
                    <hr />
                }
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-info text-white">
                <i class="bi bi-bar-chart"></i> Stats
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Movies as Actor</span>
                    <strong>@Model.MoviesAsActor.Count</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Movies as Crew</span>
                    <strong>@Model.MoviesAsCrew.Count</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total Credits</span>
                    <strong>@(Model.MoviesAsActor.Count + Model.MoviesAsCrew.Count)</strong>
                </li>
            </ul>
        </div>
    </div>
</div>