@model MovieRental.ViewModels.Cart.CartViewModel

@{
    ViewData["Title"] = "My Cart";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-cart3"></i> My Cart
        @if (Model.TotalItems > 0)
        {
            <span class="badge bg-primary">@Model.TotalItems</span>
        }
    </h1>
    @if (Model.Items.Any())
    {
        <a asp-action="Checkout" class="btn btn-success btn-lg">
            <i class="bi bi-credit-card"></i> Proceed to Checkout
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Items.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-cart-x text-muted" style="font-size: 5rem;"></i>
        <h3 class="mt-3 text-muted">Your cart is empty</h3>
        <p class="text-muted">Browse our collection and add some movies to rent!</p>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-primary btn-lg mt-3">
            <i class="bi bi-film"></i> Browse Movies
        </a>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>Cart Items</strong>
                    <form asp-action="Clear" method="post" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to clear your cart?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Clear Cart
                        </button>
                    </form>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Items)
                    {
                        <li class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="mb-1">
                                        <a asp-controller="Movies" asp-action="Details" 
                                           asp-route-id="@item.MovieId" class="text-decoration-none">
                                            @item.MovieTitle
                                        </a>
                                    </h5>
                                    <small class="text-muted">@item.ReleaseYear</small>
                                    <div class="mt-1">
                                        @foreach (var genre in item.Genres)
                                        {
                                            <span class="badge bg-secondary me-1">@genre</span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-3 text-md-center">
                                    <span class="h5 text-success">@item.Price.ToString("C")</span>
                                </div>
                                <div class="col-md-3 text-md-end mt-2 mt-md-0">
                                    <form asp-action="Remove" asp-route-id="@item.CartItemId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Remove this movie from cart?');">
                                            <i class="bi bi-x-lg"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <small class="text-muted">Added @item.AddedAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <strong><i class="bi bi-receipt"></i> Order Summary</strong>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items:</span>
                        <span>@Model.TotalItems movie(s)</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <strong class="h5">Total:</strong>
                        <strong class="h5 text-success">@Model.TotalPrice.ToString("C")</strong>
                    </div>
                    <div class="d-grid">
                        <a asp-action="Checkout" class="btn btn-success btn-lg">
                            <i class="bi bi-credit-card"></i> Checkout
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted small">
                    <i class="bi bi-shield-check"></i> Secure checkout
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body text-center">
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Continue Browsing
                    </a>
                </div>
            </div>
        </div>
    </div>
}