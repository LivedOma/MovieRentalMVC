@model MovieRental.ViewModels.Movies.MovieDetailsViewModel

@{
    ViewData["Title"] = $"Delete: {Model.Title}";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.MovieId">@Model.Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>

<h1 class="text-danger">Delete Movie</h1>

<div class="alert alert-warning" role="alert">
    <i class="bi bi-exclamation-triangle-fill"></i>
    <strong>Warning!</strong> Are you sure you want to delete this movie? This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Movie to be deleted</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Title</dt>
                    <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                    <dt class="col-sm-4">Year</dt>
                    <dd class="col-sm-8">@Model.ReleaseYear</dd>

                    <dt class="col-sm-4">Duration</dt>
                    <dd class="col-sm-8">@Model.DurationMinutes minutes</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.RentalPrice.ToString("C")</dd>

                    <dt class="col-sm-4">Genres</dt>
                    <dd class="col-sm-8">
                        @if (Model.Genres.Any())
                        {
                            @string.Join(", ", Model.Genres)
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.MovieId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Yes, Delete
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>